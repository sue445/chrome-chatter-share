{
    "manifest_version": 2,

    "name": "Chatter Share for Google Chrome™",
    "description": "Share link to Salesforce Chatter™ via Google Chrome™",
    "version": "1.0.1",

    "icons": {
        "48"  : "img/icon_48.png",
        "128" : "img/icon_128.png"
    },

    "permissions": [
        "tabs",
        "https://login.salesforce.com/*",
        "https://*.salesforce.com/services/*"
    ],

    "options_page": "options.html",

    "background": {
        "page" : "background.html"
    },

    "content_scripts": [
        {
            "matches": ["https://login.salesforce.com/services/oauth2/success*"],
            "js": ["src/oauth2_inject.js"],
            "run_at": "document_start"
        }
    ],

    "browser_action": {
        "default_icon":  "img/icon_128.png",
        "default_popup": "popup.html"
    }
}